// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  role      String
  profile Profile[]
  CreatedAt DateTime @default(now()) //saber a data que o dado foi criado
  updatedAt DateTime @updatedAt //saber a data da ultima x que o dado foi atualizado
}

model Profile {
  id String @id @unique
  name String
  image String
  user User? @relation(fields: [userId], references: [id])
  userId String?
  Games Games[]
}

model Games {
  id String @id @unique
  name String
  descricao String
  year Int
  autor String
  produtora String
  score Float
  profile Profile? @relation(fields: [profileId], references: [id])
  profileId String
  genero Genero[]
}

model Genero {
  id String @id @unique
  titulo String
  games Games? @relation(fields: [gamesId], references: [id])
  gamesId String
}
