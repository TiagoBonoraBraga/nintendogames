// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  role      String
  profiles Profile[] // um user tem varios profiles (array de profiles)
  CreatedAt DateTime @default(now()) //saber a data que o dado foi criado
  updatedAt DateTime @updatedAt //saber a data da ultima x que o dado foi atualizado
}

model Profile {
  id String @id @unique
  name String
  image String
  user User @relation(fields: [userId], references: [id]) //relaciona o campo da model profile com o id do user
  userId String
  Games Games[] //um profile pode ter mt jogos
}

model Games {
  id String @id @unique
  name String
  descricao String
  year Int
  autor String
  produtora String
  score Float
  profiles Profile[]
  
  genero Genero[]
}

model Genero {
  id String @id @unique
  titulo String
 games Games[]
}
